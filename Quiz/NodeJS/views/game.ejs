<!DOCTYPE html>
<html>
   <head>
      <meta charset="utf-8" />
      <link rel="stylesheet" href="styles.css"/>
      <title>Quiz</title>
   </head>

   <body>
      
      <% data.questions.forEach(function(question, iQuestion) { %>
         <div class="question" id="question<%=iQuestion%>" <% if(iQuestion == data.displayedQuestion) { %>style="display: block;"<% }%>>
            <p><%=data.texts.question%> <span id="iQuestion"><%=iQuestion + 1%></span>/<%=data.questions.length%></p>
            <p><%=question.question%></p>
            <% question.choices.forEach(function(choice) {
            if (question.isMultiple) { %>
               <input type="checkbox" <% if (choice.isChecked) { %>checked<% } %>> <%=choice.text%> <br>
            <% } else { %>
               <input type="radio" <% if (choice.isChecked) { %>checked<% } %> name="radio<%=iQuestion%>"> <%=choice.text%> <br>
            <%}});%>
         </div>
      <% }); %>
      
      <p>
         <button id="previousButton" <% if (data.displayedQuestion == 0) { %>disabled<% } %>><%=data.texts.previous%></button>
         <button id="submitButton"><%=data.texts.submit%></button>
         <button id="nextButton" <% if (data.displayedQuestion == data.questions.length - 1) { %>disabled<% } %>><%=data.texts.next%></button>
      </p>
      
      <form id="stopForm" action="/" method="post">
         <p>
            <input type="submit" value="<%=data.texts.stop%>" name="stop"/>
         </p>
      </form>
   
      <script>
         var displayedQuestion = <%=data.displayedQuestion%>;
         var questionCount = <%=data.questions.length%>;
      </script>
      <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
      <script src="/socket.io/socket.io.js"></script>
      <script src="game.js"></script>
   </body>
</html>
